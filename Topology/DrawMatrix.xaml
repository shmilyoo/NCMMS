<Window x:Class="NCMMS.Topology.DrawMatrix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DrawMatrix" Height="500" Width="500">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="xGrid" Grid.Column="1" ShowGridLines="True" Background="Beige"></Grid>
        <Grid x:Name="yGrid" Grid.Row="1" ShowGridLines="True" Background="Bisque"></Grid>
        <Grid x:Name="matrixGrid" Grid.Row="1" Grid.Column="1" ShowGridLines="True" Background="Azure"></Grid>
        </Grid>
</Window>
