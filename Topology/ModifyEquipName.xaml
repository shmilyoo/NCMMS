<Window x:Class="NCMMS.Topology.ModifyEquipName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModifyEquipName" Height="150" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="名称:" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" x:Name="textBox" VerticalAlignment="Center" Width="100" />
        <Button Content="确认" Grid.ColumnSpan="3" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="23,0,0,0" x:Name="btnOK" VerticalAlignment="Center" Width="50" Click="btnOK_Click" IsDefault="True" />
        <Button Content="取消" Grid.Column="2" Grid.Row="1" Height="23" HorizontalAlignment="Center" x:Name="btnCancel" VerticalAlignment="Center" Width="50" IsCancel="True" />
    </Grid>
</Window>
