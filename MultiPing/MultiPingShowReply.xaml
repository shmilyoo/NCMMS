<local:MyWindow x:Class="NCMMS.MultiPing.MultiPingShowReply"
        xmlns:local="clr-namespace:NCMMS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BtnMaxFlag="True" Style="{StaticResource WindowNoStyle}"  WindowStartupLocation="CenterOwner" MinHeight="200" MinWidth="200" Width="550" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <CheckBox x:Name="isAutoScroll" Content="自动滚屏" IsChecked="True" HorizontalAlignment="Right"  Margin="0,5,5,0"></CheckBox>
        <ListBox Foreground="Black"  x:Name="listBox" Margin="5" Grid.Row="1"></ListBox>
    </Grid>
</local:MyWindow>
